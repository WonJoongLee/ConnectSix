<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.connectsix.connectsix">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ConnectSix"
        android:name="com.connectsix.connectsix.sharedRef.SharedData">
        <activity android:name="com.connectsix.connectsix.TwoplayerGameboard"/>
        <activity android:name="com.connectsix.connectsix.SinglePlayer"
            />
        <activity android:name="com.connectsix.connectsix.MainActivity"
            android:configChanges="uiMode">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service android:name="com.connectsix.connectsix.UnCatchTaskService"
            android:stopWithTask="false"/>
    </application>

</manifest>